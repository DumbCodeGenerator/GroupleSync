<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/chaptersRefresh"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@+id/scroll">

        <ListView
            android:id="@+id/chaptersList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:divider="#FFFFFF"
            android:dividerHeight="1dip"
            android:fastScrollEnabled="true"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            tools:targetApi="lollipop" />


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        android:layout_margin="16dp"
        android:src="@drawable/arrow_down"
        android:focusable="true" />


    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scrollbars="none"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/selectAll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Выделить все"
                android:theme="@style/Button"
                android:visibility="visible" />

            <Button
                android:id="@+id/selectUnread"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Выделить непрочитанные"
                android:theme="@style/Button"
                android:visibility="visible" />

            <Button
                android:id="@+id/makeReaded"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Пометить как прочитанное"
                android:theme="@style/Button"
                android:visibility="visible" />

            <Button
                android:id="@+id/downloadSelected"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Скачать выбранные"
                android:theme="@style/Button"
                android:visibility="visible" />

            <Button
                android:id="@+id/deleteSelected"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Удалить выбранные"
                android:theme="@style/Button"
                android:visibility="visible" />


        </LinearLayout>
    </HorizontalScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>